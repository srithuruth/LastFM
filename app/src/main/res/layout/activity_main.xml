<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity">

    <EditText
            android:layout_width="207dp"
            android:layout_height="41dp"
            android:hint="Album"
            android:ems="10"
            android:id="@+id/etAlbum"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="86dp" android:layout_marginStart="86dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="143dp" android:layout_marginRight="143dp"
            android:layout_marginTop="56dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:inputType=""/>

    <EditText
            android:layout_width="207dp"
            android:layout_height="41dp"
            android:hint="Artist"
            android:ems="10"
            android:id="@+id/etArtist"
            android:inputType=""
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="62dp" android:layout_marginStart="62dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="142dp" android:layout_marginRight="142dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="41dp"
            app:layout_constraintTop_toBottomOf="@+id/etAlbum"/>

    <Button
            android:id="@+id/btnSearch"
            android:text="SEARCH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="94dp" app:layout_constraintTop_toBottomOf="@+id/etArtist"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="197dp"
            android:layout_marginRight="197dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="126dp" android:layout_marginStart="126dp"/>


    <android.support.v7.widget.RecyclerView
            android:id="@+id/rvSearch"
            android:layout_width="370dp"
            android:layout_height="271dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="36dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.64"
            android:layout_marginTop="103dp" app:layout_constraintTop_toBottomOf="@+id/btnSearch"/>

</android.support.constraint.ConstraintLayout>